			p Чтобы добавить метод закрытия окна по клику на элемент добавиь класс .modal-send
			.btn-wrap
				.btn--md.btn--mark.modal-get(data-modal="review") Отзыв | data-modal="review"
				br
				.btn--md.btn--mark.modal-get(data-modal="login") Логин | data-modal="login"
				br
				.btn--md.btn--mark.modal-get(data-modal="forgot") Код на номер телефона | data-modal="forgot"
				br
				.btn--md.btn--mark.modal-get(data-modal="code") Отправить код | data-modal="code"
				br
				.btn--md.btn--mark.modal-get(data-modal="registration") регистрация | data-modal="registration"
				br
				.btn--md.btn--mark.modal-get(data-modal="truemessage") Успешное действие | data-modal="truemessage"
				br
				.btn--md.btn--mark.modal-get(data-modal="falsemessage") Не успешное действие | data-modal="falsemessage"
				br
				.btn--md.btn--mark.modal-get(data-modal="editprofile") Изменить профиль | data-modal="editprofile"
				br
				.btn--md.btn--mark.modal-get(data-modal="TY") Заказ принят | data-modal="TY"

				br
