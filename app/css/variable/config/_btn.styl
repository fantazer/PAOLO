// ============================ Buttons ============================
.btn
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	font-size: 16px
	font-weight: 700
	letter-spacing 0.4px
	&:hover
		cursor pointer

.btn--sm
	@extend .btn
	padding 15px 30px
	@extend .type--mdx

.btn--md
	@extend .btn
	padding 20px 55px
	@extend .type--lg
	font-weight 700
.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $mark
	.nav-icon
		fill white
	&:hover
		background-color darken($mark,10)
		color white!important
	&:active
		background-color darken($mark,20)
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--red
	@extend .btn
	color white
	background $red
	.nav-icon
		fill white
	&:hover
		background-color darken($red,10)
		color white!important
	&:active
		background-color darken($red,20)
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--gray
	@extend .btn
	color black
	background $border-color
	.nav-icon
		fill white
	&:hover
		background-color darken($border-color,40)
		color white
	&:active
		background-color darken($border-color,50)
		color white
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	border 1px solid $border-color
	background-color #ffffff
	&:hover
		border 1px solid $mark
		color $mark
	.nav-icon
		fill $mark

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--icon
	flex(mid)

.btn--full
	width: 100%

.nav-icon
	size 16px
	display inline-block

.nav-icon--left
	margin-left 10px

.nav-icon--right
	margin-right  10px


.btn-row-mid
	flex(mid)
	margin: 30px 0
.btn-row-mid--clear
	margin-bottom 0
