@import 'rupture'
@import "variable/_function.styl"
@import "variable/_fonts.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1270px,10px)
.main-cont--sm
	center(800px,10px)

.main-cont--xs
	center(640px,10px)

.wrap-cont
	+below(640px)
		margin-top: 0
	center(1250px,10px)
	background: white
	padding: 40px 20px
	margin-top: 30px

.wrap-cont--main
	+below(640px)
		padding-top: 100px
	margin-top: -60px
	padding-top: 140px

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1
	position relative
	background-color: #f6f6f6
	padding-bottom: 70px
	&:after
		content ''
		width: calc((100% - 1250px)/2)
		height: 100%
		top 0
		left 0
		background-attachment: fixed
		background-color: #f6f6f6
		background-image: url(/img/pattern-right.png)
		position absolute
		opacity: .2
	&:before
		content ''
		width: calc((100% - 1200px)/2)
		height: 100%
		top 0
		right 0
		background-attachment: fixed
		background-color: #f6f6f6
		background-image: url(/img/pattern-right.png)
		position absolute
		background-position: 0 200px
		opacity: .2
//modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
	transform translateY(-350%)
	position: absolute
	opacity 0
	transition opacity .8s
	width: 360px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal--lg
	+below(768px)
		width: 100%
	width: 720px
	max-width initial
.modal--xl
	+below(1500px)
		width: 100%
	width: 1500px


.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
		br(0)
	background: white
	position: relative
	padding: 40px

.modal-content--clear
	padding: 0

.modal__show
	max-height 100%
	opacity 1
	transform translateY(0)
	position: relative

.modal-close
	+below(768px)
		size 35px
		.icon
			size 12px
	flex(mid)
	cp()
	z-index 100
	position: absolute
	top: 0
	right: 0
	size 50px
	background: $red
	.icon
		size 20px
		fill white

.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%
.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 28px
	margin-bottom: 20px
	text-align: center
	color black
	font-family "Lifehack Sans"
	@extend .type--xl
	font-weight 700
	letter-spacing 0.9px
.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto 40px auto
	//width: 80%
	font-size: 16px
	line-height: 1.2
	color #5f5f5f

.validate-form
	input,textarea
		width: 100%
		margin-bottom: 20px
.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%

.agree-row
	f()
	align-items: center
	margin:10px 0 20px 0
	a
		text-decoration: underline
		display: inline-block

.agree-row__text
	width: 100%
	color black
	font-size: 12px
	a
		color #9c9a9a
		text-decoration: none

.field-error
	.error
		display: none!important

.field-error
	input
		border 1px solid #dc3d3d
.style-label--checkbox.field-error
	.sytle-input-element
		border 1px solid #dc3d3d

.modal-content--true
	flex(mid)
	fl()

.modal-content--false
	img
		max-width 140px
		margin-left auto
		margin-right auto

.modal-text-true
	text-align: center
	font-weight: bold
	margin: 20px 0

//modal===end

// select
.nice-select
	br(0px)
	display: block
	color #000000
	font-size 14px
	font-weight 700
	height: 52px
	line-height: 52px
	float none
	.list
		width: calc(100% )
		left 0px
		border-radius 0 0 5px 5px
		border 0px solid $border-color
		border-top 0
		margin-top: 0
		max-height 150px
		overflow-y auto
		li
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
	.current //max width dots
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
		display: inline-block
		//max-width 120px

.nice-select.open
	border-radius 5px 5px 0 0

select.select-beauty
	display: none!important

.element-select
	padding: 20px 0

.nice-select:active, .nice-select.open, .nice-select:focus
	border 1px solid $border-color
// select === end

// range slider
.range__wrap
	margin-bottom 50px
	margin-top -20px
	.irs-bar-edge
		background blue
		height 15px
		border-radius 10px 0px 0px 10px
		width 25px
	.irs-bar
		height 15px
		background blue
	.irs-line-left
		height 15px
		border-radius 10px 0px 0px 10px
		background #e6ecf6
	.irs-line-right
		height 15px
		background #e6ecf6
		border-radius 0px 10px 10px 0px
	.irs-line-mid
		background #e6ecf6
		height 15px
	.irs-line
		height 15px
	.single
		background url('../img/range-btn.png')
	.irs-slider
		width 45px
		height 30px
	.irs-min, .irs-max,.irs-single
		top 45px
		background transparent
		color black
.range__wrap--green
	.irs-bar-edge
		background green
	.irs-bar
		background green
.range-set
	flex(between)
	input
		+below(768px)
			width 80px
		padding 0
		margin-bottom 10px
		border 1px solid grey--light
		padding 3px
		font-size 16px
		width 110px
// range slider === end

// slide menu
.head-toggle
	+above(769px)
		display: none
	+below(640px)
		margin-left auto
	size 50px
	flex(mid)
	cp()
	.icon
		size 25px
		fill black
	.icon-close
		display: none

.head-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-menu
	+above(1025px)
		display: none !important
		top: 0
	+below(480px)
		width: 100%
	background: black
	color white
	position: fixed
	height: 100% //Отступ хедер
	z-index 1250
	right 0
	top 0
	padding: 20px
	width: 320px
	transform translateX(100%)
	tr(all)
	.header-search-panel
		width: 100%
		margin-left: 0
	.header-slogan
		f()
		margin: 0 0 10px 0
		.tooltip
			display inline-block
	.search-location-val
		color black
		margin-left: 10px
		text-align: left
.slide-menu--open
	transform translateX(0%)
	overflow-y: auto
.slide-menu__list
	margin-bottom: 40px
.slide-menu__list-el
	display: block
	margin-bottom: 40px
	color white
	font-size: 16px
	up()
	tr(all)
	&:hover
		color red
.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important


.slide-location
	font-size: 16px
	display inline-block
	cp()
	border-bottom 1px dashed white

.slide-contact
	margin-left: -20px
	margin-right: -20px
	background: rgba(255, 255, 255, 0.15)
	padding: 20px
	margin-bottom: 15px
.slide-phone
	font-size: 24px
	color white
	font-weight: 700
.slide-time
	opacity: .5
	margin-bottom: 10px
.slide-mail
	color white
.slide-nav__el
	tr()
	font-weight: 700
	color white
	opacity: .7
	font-size: 16px
	margin-bottom: 15px
	display block
	&:hover
		opacity: 1
.slide-search
	position relative
	margin: 20px 0
	.icon
		fill white
		size 18px
	.input
		border 0
		background: #262626
		width: 100%
		padding-left: 40px
		padding-right: 40px
.slide-search__action
	position absolute
	top 17px
	left 15px
.slide-search__clear
	.icon
		size 14px
	position absolute
	top 18px
	right 15px
	opacity: .7
.slide-info
	background: white
	padding: 20px
	margin: 15px -20px
.slide-link
	margin-bottom: 20px
.slide-link__el
	tr()
	display block
	color white
	opacity: .7
	margin-bottom: 10px
	&:hover
		opacity: 1

.slide-menu-head
	flex(between)
	margin-bottom: 20px
.slide-menu-close
	margin-left: 10px
	.icon
		size 18px
		fill white
// slide menu === end

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 100
	box-shadow 0 0 10px #efefef
// animate top menu === end

