// ITEMS
.add
	size 70px
	flex(mid)
	cp()
	tr()
	background-image: url(../img/ink.png)
	bg-full()
	&:hover
		-webkit-filter unquote("grayscale(100%)")
	&:active
		background-color $black
	.icon
		size 30px
		fill white

.add--sm
	size 44px
	.icon
		size 22px
.items
	+below(1200px)
		grid-template-columns repeat(3,1fr)
	+below(960px)
		grid-template-columns repeat(2,1fr)
		grid-gap 30px
		margin-bottom: 0px
	+below(640px)
		grid-template-columns 1fr
		margin-bottom: 40px
	display: grid
	grid-gap 30px
	grid-template-columns repeat(auto-fill, minmax(14rem,1fr))
	margin-bottom: 100px
.items--sm
	grid-template-columns repeat(auto-fill, minmax(10rem,1fr))

.item
	+below(640px)
		flex-flow row
		align-items: flex-start
		margin-left: -10px
		box-shadow 0 0 0
	+below(480px)
		flex-flow column
		width calc(100% + 20px)
	f()
	fl()
	position: relative
	animation-duration: .8s
	animation-fill-mode: both
	animation-timing-function: ease-in-out
	animation-iteration-count: 1
	transform: translateZ(20px)

.item--sm
	.item__title
		@extend .type--lg
	.incr__val
		padding: 0 10px
		font-size: 14px
.item__img
	+below(640px)
		height: auto!important
		padding: 15% 10%
		width: 35%
		border-radius 0 30px 30px 0
		min-height 150px
	+below(480px)
		padding: 35% 10%
		width: 100%
		border-radius 0
		margin-bottom: 20px
	bg-full()
	padding: 53% 10%
	transition all .2s
	position: relative
.item__content
	+below(640px)
		width: 65%
		border 0
		padding: 0 10px
		box-shadow 0 0 0
		background: none
	+below(480px)
		width: 100%
	f()
	fl()
	tr(all)
	flex-grow 1
.item__title
	margin-bottom: 5px
	line-height: 1.2
	color white
	display block
	tr()
	up()
	font-family "Lifehack Sans"
	@extend .type--xl
	font-weight 700
	letter-spacing 0.9px
	text-transform uppercase
	&:hover
		opacity: .8
		color white
.item__text
	color $border-color
.item__footer
	f()
	align-items center
	margin-top: auto
	.elements-icr-block
		width: 100%
	.incr
		flex(between)
.item__price
	@extend .type--xl
	font-family Montserrat
	font-weight 700
	margin: 0 15px
.price-valute
	@extend .type--md
	display inline-block
	margin-left: 3px
.price-valute--sm
	@extend .type--sm

//.item__weight

.item__add
	@extend .add

.item--clone
	background: black
	transform scale(.9)
