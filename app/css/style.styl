.head-info
	+below(768px)
		display none
	padding: 30px 0
	f()
	align-items center
//.logo

.search-location-wrap
	f()
	width: 100%
.search-location-icon
	background: $mark
	size 60px
	flex(mid)
	cp()
	.icon
		size 24px
		fill white
.search-location-val
	font-weight: 700
